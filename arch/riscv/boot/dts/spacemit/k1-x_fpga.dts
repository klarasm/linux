/dts-v1/;

#include "k1-x.dtsi"
/ {
	model = "spacemit k1-x fpga board";

	cpus: cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		timebase-frequency = <10000000>;

		cpu_0: cpu@0 {
			cpu-ai = "true";
		};

		cpu_1: cpu@1 {
			cpu-ai = "true";
		};

		cpu_2: cpu@2 {
			reg = <2>;
			cpu-ai = "true";
		};

		cpu_3: cpu@3 {
			reg = <3>;
			cpu-ai = "true";
		};

		cpu-map {
			cluster0 {
				core0 {
					cpu = <&cpu_0>;
				};

				core1 {
					cpu = <&cpu_1>;
				};

				core2 {
					cpu = <&cpu_2>;
				};

				core3 {
					cpu = <&cpu_3>;
				};
			};
		};
	};

	lcds: lcds {
		lcd_gc9503v_mipi: lcd_gc9503v_mipi {
			dsi-work-mode = <1>; /* video burst mode*/
			dsi-lane-number = <4>;
			dsi-color-format = "rgb888";
			phy-bit-clock = <911000>;	/* kbps */
			phy-escape-clock = <52000>;/* kHz */
			width-mm = <72>;
			height-mm = <126>;
			use-dcs-write;
			/*mipi info*/
			height = <640>;
			width = <480>;
			hfp = <60>;
			hbp = <60>;
			hsync = <8>;
			vfp = <30>;
			vbp = <30>;
			vsync = <8>;
			fps = <60>;
			work-mode = <0>;
			rgb-mode = <3>;
			lane-number = <2>;
			phy-freq = <341000>;
			split-enable = <0>;
			eotp-enable = <0>;
			burst-mode = <2>;
			esd-check-enable = <0>;
			/* DSI_CMD, DSI_MODE, timeout, len, cmd  */
			initial-command = [
				39 01 00 06 F0 55 AA 52 08 00
				39 01 00 03 F6 5A 87
				39 01 00 02 C1 3F
				39 01 00 02 C2 0E
				39 01 00 02 C6 F8
